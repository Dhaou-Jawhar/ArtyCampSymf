<body>
	<!-- 3D objet dans artycamp -->

	{% block body %}
    <model-viewer src="{{ asset('/templates/3dmodel/scene.gltf') }}" alt="A 3D model of a car" shadow-intensity="1" camera-controls auto-rotate ar >
    </model-viewer>


	<!-- 💁 Include both scripts below to support all browsers! -->

	<!-- Loads le <model-viewer> pour les modernes browsers: -->
	  <script type="module"
		  src="{{ asset('https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js') }}">
	  </script>

	<!-- Loads le <model-viewer> pour les old browsers like IE11: -->
	<script nomodule
      src="{{ asset('https://unpkg.com/@google/model-viewer/dist/model-viewer-legacy.js') }}">
	</script>

{% endblock %}
</body>

</html>
